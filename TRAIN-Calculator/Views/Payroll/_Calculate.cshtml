@model TRAIN_Calculator.ViewModels.PayrollViewModel


<div class="container">
    <div class="row">
        <div class="form-horizontal">

            <div class="form-group">
                <div class="col-md-12">
                    @Html.EnumDropDownListFor(model => model.PaySlips.EarnerType, "Earner Type", new { @class = "form-control ddl-earnerType", style = "display:inline-block" })
                    <i class="fas fa-info-circle" style="display:inline-block;" data-toggle="tooltip" data-placement="right" title="Earner Type"></i>
                </div>
                <div class="col-md-12">
                    @Html.ValidationMessageFor(model => model.PaySlips.EarnerType, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.PaySlips.TotalHoursWorked, new { htmlAttributes = new { @class = "form-control", placeholder = "Total Hours Worked" } })
                    @Html.ValidationMessageFor(model => model.PaySlips.TotalHoursWorked, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.PaySlips.ExpectedWorkedHours, new { htmlAttributes = new { @class = "form-control", placeholder = "Expected Worked Hours" } })
                    @Html.ValidationMessageFor(model => model.PaySlips.ExpectedWorkedHours, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.PaySlips.OvertimeWorkedHours, new { htmlAttributes = new { @class = "form-control", placeholder = "Overtime Worked Hours" } })
                    @Html.ValidationMessageFor(model => model.PaySlips.OvertimeWorkedHours, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.PaySlips.OvertimeRatePerHour, new { htmlAttributes = new { @class = "form-control", placeholder = "Overtime Rate Per Hour" } })
                    @Html.ValidationMessageFor(model => model.PaySlips.OvertimeRatePerHour, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.PaySlips.BasicSalary, new { htmlAttributes = new { @class = "form-control", placeholder = "Basic Salary" } })
                    @Html.ValidationMessageFor(model => model.PaySlips.BasicSalary, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-12">
                    <input type="submit" value="Calculate" class="btn btn-primary" />
                </div>
            </div>

        </div>
    </div>
</div>


