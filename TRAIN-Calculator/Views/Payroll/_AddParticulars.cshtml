                        @Html.ValidationMessageFor(model => model.PaySlipDeductions.SSSLoan, "", new { @class = "text-danger" })
                    </dd>


                    <dd class="col-md-offset-1 hide" id="@Html.DisplayNameFor(model => model.PaySlipDeductions.PAGIBIGLoan)">
